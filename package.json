{
  "name": "Doist",
  "description": "It's time to do great things!",
  "version": "1.0.3",
  "main": "./dist/main.js",
  "author": "Andrew Emelianenko <emelianenko.web@gmail.com>",
  "repository": "https://github.com/MrEmelianenko/mastering-electron",
  "license": "MIT",
  "scripts": {
    "build:dev": "run-s -s build:main:dev build:renderer:dev",
    "build:main:dev": "webpack --config config/webpack/main/development.js",
    "build:renderer:dev": "webpack --config config/webpack/renderer/development.js",
    "build:prod": "run-s -s build:main:prod build:renderer:prod",
    "build:main:prod": "webpack --config config/webpack/main/production.js",
    "build:renderer:prod": "webpack --config config/webpack/renderer/production.js",
    "start:dev": "run-p start:renderer:dev start:main:dev",
    "start:main:dev": "yarn build:dev && electron -r @babel/register ./dist/main.js",
    "start:renderer:dev": "webpack-dev-server --config config/webpack/renderer/development.js --color",
    "lint": "run-s -c -s lint:js lint:scss",
    "lint:js": "eslint .",
    "lint:scss": "stylelint src/**/*.scss",
    "lint:fix": "run-s -c -s lint:fix:js lint:fix:scss",
    "lint:fix:js": "eslint . --fix",
    "lint:fix:scss": "stylelint src/**/*.scss --fix",
    "postinstall": "electron-builder install-app-deps",
    "pack": "yarn build:prod && electron-builder --dir",
    "dist": "yarn build:prod && electron-builder",
    "release": "yarn version && yarn build:prod && electron-builder --publish always"
  },
  "build": {
    "appId": "io.iamdev.MasteringElectron",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "dist/"
    ],
    "directories": {
      "buildResources": "src/resources",
      "output": "release"
    },
    "publish": "github"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "ant-design-vue": "^1.3.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^2.1.0",
    "deep-extend": "^0.6.0",
    "electron": "^11.5.0",
    "electron-builder": "^20.38.5",
    "electron-context-menu": "^0.11.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^3.0.1",
    "electron-updater": "^4.0.6",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "url-loader": "^1.1.2",
    "uuid": "^3.3.2",
    "vue": "^2.6.6",
    "vue-devtools": "^5.0.0-beta.1",
    "vue-eslint-parser": "^6.0.2",
    "vue-loader": "^15.6.3",
    "vue-router": "^3.0.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.6",
    "vue2-timepicker": "^0.1.4",
    "vuex": "^3.1.0",
    "vuex-electron": "^1.0.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1",
    "yarn-run-all": "^3.1.1"
  }
}
